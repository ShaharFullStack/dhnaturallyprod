# DHnaturally Frontend Environment Configuration Example
# Copy this file to .env and update the values as needed

# Backend API Base URL - REQUIRED
# This should point to your backend server
REACT_APP_BASE_URL=http://localhost:4000/

# Environment
REACT_APP_ENV=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true

# API Configuration
REACT_APP_API_TIMEOUT=10000
REACT_APP_MAX_RETRIES=3

# Media URLs
REACT_APP_IMAGES_BASE_URL=http://localhost:4000/uploads/

# New Database Features (from database improvements)
REACT_APP_ENABLE_PRODUCT_REVIEWS=true
REACT_APP_ENABLE_PRODUCT_VARIANTS=true
REACT_APP_ENABLE_WISHLIST=true
REACT_APP_ENABLE_DISCOUNT_CODES=true
REACT_APP_ENABLE_ANALYTICS=true

# Internationalization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,he

# Security
REACT_APP_CSP_ENABLED=false
